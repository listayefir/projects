@model EGE.Models.Question

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href='https://fonts.googleapis.com/css?family=Neucha&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    @Styles.Render("~/CSS/stress.css")
</head>
<body>
<div class="container">
    <div class="row">
        Очки :0/40
        Уровень:1
    </div>
    
    <div class="question-box">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 well">
                <p class="text-center word">@Html.DisplayFor(model =>model.Quest)</p>
               
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <button type="button" class="btn btn-success btn-lg btn-block ">
                    <p class="answer">@Html.DisplayFor(model => model.Answer1)</p>
                </button>
            </div>
            <div class="col-md-4 ">
                <button type="button" class="btn btn-success btn-lg btn-block ">
                    <p class="answer">@Html.DisplayFor(model => model.Answer2)</p>
                </button>
            </div>
        </div>
    </div><!--question-box-->
</div><!--container-->
    </body>
</html>
